function
v3(x,y,z)
	return {
		x=x,
		y=y,
		z=z,
	}
end

t=0
verts={
	v3(-1, 1,-1),
	v3( 1, 1, 1),
	v3(-1, 1, 1),

	v3(-1, 1,-1),
	v3( 1, 1,-1),
	v3( 1, 1, 1),

	v3(-1,-1,-1),
	v3(-1,-1, 1),
	v3( 1,-1, 1),

	v3(-1,-1,-1),
	v3( 1,-1, 1),
	v3( 1,-1,-1),

	v3(-1, 1,-1),
	v3(-1, 1, 1),
	v3(-1,-1, 1),

	v3(-1, 1,-1),
	v3(-1,-1, 1),
	v3(-1,-1,-1),

	v3( 1, 1,-1),
	v3( 1,-1, 1),
	v3( 1, 1, 1),

	v3( 1, 1,-1),
	v3( 1,-1,-1),
	v3( 1,-1, 1),

	v3(-1, 1, 1),
	v3( 1, 1, 1),
	v3(-1,-1, 1),

	v3( 1, 1, 1),
	v3( 1,-1, 1),
	v3(-1,-1, 1),

	v3(-1, 1,-1),
	v3(-1,-1,-1),
	v3( 1, 1,-1),

	v3( 1, 1,-1),
	v3(-1,-1,-1),
	v3( 1,-1,-1),
}
